<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">

	<portlet>
		<portlet-name>sakai-connector</portlet-name>
		<display-name>sakai-connector</display-name>
		<portlet-class>
			au.edu.anu.portal.portlets.sakaiconnector.PortletDispatcher
		</portlet-class>
	<init-param>
			<name>viewUrl</name>
			<value>/pages/view.jsp</value>
		</init-param>
		<init-param>
			<name>editUrl</name>
			<value>/pages/edit.jsp</value>
		</init-param>
		<init-param>
			<name>proxyUrl</name>
			<value>/pages/proxy.jsp</value>
		</init-param>
		<init-param>
			<name>errorUrl</name>
			<value>/pages/error.jsp</value>
		</init-param>
		<init-param>
			<name>configUrl</name>
			<value>/pages/config.jsp</value>
		</init-param>
		<init-param>
   			<name>portal.attribute.mapping.username</name>
   			<value>user.name.nickName</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
			<portlet-mode>CONFIG</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<portlet-info>
			<title>lms connector</title>
			<short-title>lms connector</short-title>
			<keywords></keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>key</name>
				<value>liferaydemo.xxxxxx.com</value>
			</preference>
			<preference>
				<name>secret</name>
				<value>Welcome@0</value>
			</preference>
			<preference>
				<name>endpoint</name>
				<value>http://sakaidemo.xxxxxx.com/imsblti/provider/</value>
			</preference>
			<preference>
				<name>adminUsername</name>
				<value>admin</value>
			</preference>
			<preference>
				<name>adminPassword</name>
				<value>Welcome@0</value>
			</preference>
			<preference>
				<name>loginUrl</name>
				<value>http://sakaidemo.xxxxxx.com/sakai-ws/soap/login?wsdl</value>
			</preference>
			<preference>
				<name>scriptUrl</name>
				<value>http://sakaidemo.xxxxxx.com/sakai-ws/soap/sakai?wsdl</value>
			</preference>
			<preference>
				<name>allowedTools</name>
				<value>sakai.announcements:sakai.singleuser:sakai.assignment.grades:blogger:sakai.dropbox:sakai.mailbox:sakai.forums:sakai.gradebook.tool:sakai.podcasts:sakai.poll:sakai.resources:sakai.schedule:sakai.samigo:sakai.rwiki</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<user-attribute>
		<description>username</description>
		<name>user.name.nickName</name>
	</user-attribute>
</portlet-app>
